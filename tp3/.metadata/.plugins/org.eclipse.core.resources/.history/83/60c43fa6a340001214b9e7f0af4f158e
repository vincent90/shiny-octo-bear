package tp;

public class CreateurMemento extends Memento {

	
	private int zoom;
	private int x;
	private int y;
	
	private Memento(int pZoom, int pX, int pY)
	{
		zoom = pZoom;
		x = pX;
		y = pY;
	}
	
	public Memento sauverDansMemento(){
		return new Memento(zoom,x,y);
	}
	
	public void restaurerDepuisMemento(Memento pMemento){
		zoom = pMemento.getZoom();
		x = pMemento.getX();
		y = pMemento.getY();
	}
	
	private int getZoom(){
		return zoom;
	}
	
	private int getX(){
		return x;
	}
	
	private int getY(){
		return y;
	}
	
}
